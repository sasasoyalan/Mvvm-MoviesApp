<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sssoyalan.movieapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.sssoyalan.movieapp.BaseApplication"
        android:allowBackup="true"
        android:icon="@drawable/logo_pinsoft"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo_pinsoft"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.sssoyalan.movieapp.ui.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.sssoyalan.movieapp.ui.MainActivity"/>
    </application>

</manifest>